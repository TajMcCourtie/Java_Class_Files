public class Clock {

	private int hours, mins, secs;
	
	public Clock (int h)
	{
		hours = h;
	}
	public Clock(int h, int m, int s)
	{
		hours = h;
		mins = m;
		secs = s;
	}
	
	public int getHours()
	{
		return this.hours;
	}
	
	public void setHours(int hours)
	{
		this.hours = hours;
	}

	public int getMinutes()
	{
		return this.mins;
	}
	
	public void setMinutes(int mins)
	{
		this.mins = mins;
	}
	
	public int getSeconds()
	{
		return this.secs;
	}
	
	public void setSeconds(int secs)
	{
		this.secs = secs;
	}
	public void secondElasped()

	{

		if (secs <59)

		{

			secs++;

		}

		else

		{
			secs = 0;
		

	   }
	

		if(mins <59)

		{

			mins++;

		}

		else 

		{

			mins = 0;

			hours = hours < 12 ? hours+1 :1;

		}

	}
	
	public String Time_of_Day( int hours)
	{
		String time_of_day = " ";
	
	switch(hours)
	{
	
	case 1 :
		time_of_day = "Morning";
		
		if(hours >= 6 && hours <= 12)
	{
	   		System.out.println(time_of_day); 
	}
		break;
	
	case 2 :
		time_of_day= "Afternoon";
		
		if(hours > 12 && hours <=3 )
		{
			System.out.println(time_of_day);
		}
		break;
		
	case 3 :
		time_of_day = "Evening";
		
		if(hours >= 4 && hours <= 7)
		{
		   System.out.println(time_of_day);
		}
		break;
		
	case 4: 
		time_of_day = "Night";
		
		if(hours >= 7 && hours <= 12)
		{
			System.out.println(time_of_day);
		}
		
		
	}
	
	return time_of_day;
}
}

public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//Clock time= new Clock();
		//Clock time_day = new Clock(7, 5, 8);
		
		Clock clock;
		Clock clock1;
		
		String h; 
		String m;
		String s;
		
		int $hour;
		int $min;
		int $secs;
		
		h = JOptionPane.showInputDialog(null, "Enter the Hour");
		$hour = Integer.parseInt(h);
		
		m = JOptionPane.showInputDialog("Enter a Min");
		$min = Integer.parseInt(m);
		
		s = JOptionPane.showInputDialog("Enter a Second");
	    $secs = Integer.parseInt(s);
		
		
	   clock = new Clock ($hour, $min, $secs);
	   clock1 = new Clock($hour);
	   
		
		JOptionPane.showMessageDialog(null,"The time is "+ clock.getHours()  + ": " + clock.getMinutes() + ": "+ clock.getSeconds() + clock1.Time_of_Day($hour));
		//JOptionPane.showMessageDialog(null, clock1.Time_of_Day($hour));
		

		
	}

	
}
