import javax.swing.JOptionPane;

		import javax.swing.*;



		public class Bank_Account_Test {
			
			BankAccount aliceAcc = new BankAccount(1398723);
			BankAccount bobAcc = new BankAccount(1978394);
			
			
			public void Verify_Account_Number(double account_number)
			{
				 if(account_number == aliceAcc.getAccount_Number())

			        {

			        	JOptionPane.showMessageDialog(null, "The Account Number entered is correct");
			        } 
				 else if(account_number == bobAcc.getAccount_Number())
				 {
					 JOptionPane.showMessageDialog(null, "The Account Number entered is correct");
				 }
				 else
				 {
					 JOptionPane.showMessageDialog(null, "The Account Number entered is incorrect");
				 }
			}
			
			public static final String[] options = {"Deposit", "Withdraw", "Transfer"};



			public static void main(String[] args) {

				// TODO Auto-generated method stub

				
                Bank_Account_Test acc = new Bank_Account_Test();
               
				BankAccount aliceAcc = new BankAccount(1398723);

				BankAccount bobAcc = new BankAccount(1978394);

				

				//aliceAcc.deposit(900);

				//aliceAcc.transfer(700, bobAcc);
		

		        //System.out.println("Alice's balance is: " + aliceAcc.getBalance() );

		       // System.out.println("Bob's balance is: " + bobAcc.getBalance());

		                
              	  	 
             //Asking user for account number
		        
		       String acc_num = JOptionPane.showInputDialog("Please enter Account Number");

		       double account_number = Double.parseDouble(acc_num);

		        acc.Verify_Account_Number(account_number);
		        
		        
		        JFrame frame = new JFrame();
                String Account_Options = (String) JOptionPane.showInputDialog(frame, "Please select an option",
                		                                                      "Account Options",
                		                                                      JOptionPane.INFORMATION_MESSAGE,
                		                                                      null, options, options[0]);
                              
                
                 if(account_number == aliceAcc.getAccount_Number() && Account_Options == "Deposit")
                 {
                	 String deposit = JOptionPane.showInputDialog("Please enter the Deposit Amount");

		             double deposit_amount = Double.parseDouble(deposit);
		             aliceAcc.deposit(deposit_amount);
		             
		             JOptionPane.showMessageDialog(null, "Your Account Balance is: $" + aliceAcc.getBalance());

                 }
                 else if(account_number == bobAcc.getAccount_Number() && Account_Options == "Deposit")
                 {
                	 String deposit = JOptionPane.showInputDialog("Please enter the Deposit Amount");

		             double deposit_amount = Double.parseDouble(deposit);
		             
		             bobAcc.deposit(deposit_amount);
		             JOptionPane.showMessageDialog(null, "Your Account Balance is: $" + bobAcc.getBalance());
                 }
                 
                 
                 if(account_number == aliceAcc.getAccount_Number() && Account_Options == "Withdraw")
                 {
                	
                	 
                	 if(aliceAcc.getBalance() == 0)
                	 {
                		 JOptionPane.showMessageDialog(null, "Insufficient funds", "Warning", JOptionPane.WARNING_MESSAGE);
                	 }
                	 else
                	 {
                		 String withdraw = JOptionPane.showInputDialog("Please enter the Withdrawal Amount");

                    	 double withdraw_amount = Double.parseDouble(withdraw);
                    	
                    	 aliceAcc.withdraw(withdraw_amount);
                    	JOptionPane.showMessageDialog(null, "Your Account Balance is: $" + aliceAcc.getBalance());
                	 }
                 }
                else if(account_number == bobAcc.getAccount_Number() && Account_Options == "Withdraw") 
                {
                	                	 
                	if(bobAcc.getBalance() == 0)
               	 {
               		 JOptionPane.showMessageDialog(null, "Insufficient funds", "Warning", JOptionPane.WARNING_MESSAGE);
               	 }
               	 else
               	 {
               		 String withdraw = JOptionPane.showInputDialog("Please enter the Withdrawal Amount");

                   	 double withdraw_amount = Double.parseDouble(withdraw);
                   	
                   	 bobAcc.withdraw(withdraw_amount);
                   	 
                   	JOptionPane.showMessageDialog(null, "Your Account Balance is: $" + bobAcc.getBalance());
                 }
               }	
 
                 if(account_number == aliceAcc.getAccount_Number() && Account_Options == "Transfer")
                 {
		        	    
                 String transfer = JOptionPane.showInputDialog("Please enter the Transfer Amount");

	              double transfer_amount = Double.parseDouble(transfer);
	              
	              //asking for the account number to transfer the money to
	              String transfer_amt_acc = JOptionPane.showInputDialog("Please enter the Account number for transfer");
	              double  transfer_amt = Double.parseDouble(transfer_amt_acc);
	              
	              
	              aliceAcc.transfer(transfer_amount, bobAcc);
	              
	              
	              JOptionPane.showMessageDialog(null, "Your Account Balance is: $" + aliceAcc.getBalance());
                 }   

	             else if(account_number == bobAcc.getAccount_Number() && Account_Options == "Transfer")
	            	 
	             {   //asking for transfer amount
	            	 String transfer = JOptionPane.showInputDialog("Please enter the Transfer Amount");

		              double transfer_amount = Double.parseDouble(transfer);
		              
		              //asking for the account number to transfer the money to
		              String transfer_amt_acc = JOptionPane.showInputDialog("Please enter the Account number for transfer");
		              double  transfer_acc = Double.parseDouble(transfer_amt_acc);
		              
		              aliceAcc.transfer(transfer_amount, bobAcc);
		              
	            	 
	            	 JOptionPane.showMessageDialog(null, "Your Account Balance is: $" + bobAcc.getBalance());
	             }
		             

		            

		        }

		        
	}
		
